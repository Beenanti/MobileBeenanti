<?xml version="1.0" encoding="utf-8"?>
<!-- Detail profil -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_prof"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/bg_semuascreen">

    <!--navbar atas-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bars_nav_ba"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">
        <!-- btn kembali-->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rellay_tombolkembali_dtlprfl"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:clipToOutline="true">
            <!-- Vector -->
            <View
                android:id="@+id/vector"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_kembali"
                />
        </RelativeLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Ubah Password"
            android:textAppearance="@style/anda_belum_login"
            android:lineSpacingExtra="-4sp"
            android:gravity="center_horizontal|center_vertical"
            />

    </RelativeLayout>

    <!-- Line 1 -->
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:background="@drawable/line"
        />

    <!--password lama-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/controls_te"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:background="@drawable/bg_border">
        <!-- pasword lama-->
        <EditText
            android:id="@+id/editex_passwordlama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password Lama"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"
            android:layout_margin="7dp"
            android:textColorHint="#918B8B"
            android:textCursorDrawable="@drawable/bg_kursor"
            />

    </RelativeLayout>

    <!--paswor baru-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rellay_passwordbaru"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:background="@drawable/bg_border">

        <EditText
            android:id="@+id/editex_passwordbaru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password Baru"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"
            android:layout_margin="7dp"
            android:textColorHint="#918B8B"
            android:textCursorDrawable="@drawable/bg_kursor"
            />

    </RelativeLayout>

    <!--konfirmasi pasword-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rellay_konfirpasword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="283dp"
        android:background="@drawable/bg_border">
        <EditText
            android:id="@+id/editex_konfirmasipassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Konfirmasi Password Baru"
            android:textColor="@color/black"
            android:background="@color/white"
            android:gravity="center"
            android:layout_margin="7dp"
            android:textColorHint="#918B8B"
            android:textCursorDrawable="@drawable/bg_kursor"
            />

    </RelativeLayout>



    <!--btn ubah password-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rellay_btn_simpan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/btn_mulai"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textAppearance="@style/btn"/>
    </RelativeLayout>


</RelativeLayout>